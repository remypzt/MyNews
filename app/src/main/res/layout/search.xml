<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/input_search"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/date_of_beginning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_search"
        android:text="Select a date of beginning" />

    <Button
        android:id="@+id/date_of_ending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_search"
        android:layout_toEndOf="@id/date_of_beginning"
        android:text="Select a date of ending" />

    <include
        layout="@layout/check_boxs_category"
        android:layout_width="match_parent"
        android:id="@+id/check_boxs_cateroy"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_of_beginning" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_boxs_cateroy"
        android:text="Search" />


</RelativeLayout>